<!DOCTYPE html>
<html lang="en">
<head>
<link rel="stylesheet" type="text/css" href="/css/login_style.css" />
{{> head}}
</head>

<body>
    {{> menu}}
    <div class="container">
        <section id="content">
            <form method="POST" action="/login">
                <h1>{{heading}}</h1>
                <hr>
                {{#if failureFlag}}
                <p id="failedLogin">{{failureMessage}}</p>
                {{/if}}

                <div>
                    <input type="text" placeholder="username" name="username" id="username" required>
                </div>
                <div>
                    <input type="password" name="password" id="password" required>
                </div>
                <div>
                    <input type="submit" class="form_button" value="Submit" id="login_button" />
                    {{!-- <input type="submit" value="Log in" /> --}}
                </div>

                 
            </form><!-- form -->

            <form method="GET" action="/forgotpassword">
             <button> Forgot Password? </button>
             <br><br>
             </form>

        </section><!-- content -->
    </div><!-- container -->
</body>

</html>