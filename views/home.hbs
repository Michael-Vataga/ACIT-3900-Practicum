<!DOCTYPE html>
<html lang="en">
    {{> head}}
<body>
    {{> menu}}

    <div class="parent">
        <div class="IPE_header">
            <img src="/images/IPE_logo.png" height="100" width="100" alt="IPE Logo">
            <span class="home-header-text">{{homeTitle}}</span>
        </div>

        <div id="carouselHomeIndicators" class="carousel slide child_2" data-ride="carousel">
            <ol class="carousel-indicators">
                {{#each carouselImgs}}
                <li data-target="#carouselHomeIndicators" data-slide-to="{{@index}}" class="{{setActive @index}}"></li>
                {{/each}}
            </ol>
            <div class="carousel-inner">
                {{#each carouselImgs}}
                <div class="carousel-item {{setActive @index}}">
                    <img class="d-block w-100" src="/images/index/carousel/{{this}}" alt="{{this}}">
                </div>
                {{/each}}
            </div>
            <a class="carousel-control-prev" href="#carouselHomeIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselHomeIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
            
        <br>
        <div class="child_3">
            <h1 class="our_sponsors"><span>Our Sponsors</span></h1>
            {{#each sponsorImgs}}
                <div class="logo_col">
                    <img src="/images/index/sponsors/{{this}}" width="100%">
                </div>
            {{/each}}
        </div>

    </div>
    
</body>
{{> footer}}
</html>
