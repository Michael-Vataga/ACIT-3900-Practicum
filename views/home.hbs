<!DOCTYPE html>
<html lang="en">
    {{> head}}
<body>
    {{> menu}}

    <div class="parent">
        <div class="IPE_header">
            <img src="/images/IPE_logo.png" height="100" width="100" alt="IPE Logo">
            <span class="home-header-text">{{homeTitle}}</span>
        </div>

        <div id="carouselHomeIndicators" class="carousel slide child_2" data-ride="carousel">
            <ol class="carousel-indicators">
                {{#each carouselImgs}}
                <li data-target="#carouselHomeIndicators" data-slide-to="{{@index}}" class="{{setActive @index}}"></li>
                {{/each}}
            </ol>
            <div class="carousel-inner">
                {{#each carouselImgs}}
                <div class="carousel-item {{setActive @index}}">
                    <img class="d-block w-100" src="/images/index/carousel/{{this}}" alt="{{this}}">
                </div>
                {{/each}}
            </div>
            <a class="carousel-control-prev" href="#carouselHomeIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselHomeIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
            
        <br>
    </div>
    
    <div class="container">
        <h1 class="font-weight-light text-center text-lg-left mt-4 mb-0">Our Sponsors</h1>

        <hr class="mt-2 mb-5">
        
        {{#if sponsorsPlatinum.length}}
        <p><h2>Platinum</h2></p>
        <div class="row text-center text-lg-left">
            {{#each sponsorsPlatinum}}
            <div class="imageContainer col-lg-3 col-md-4 col-6">
                <img class="sponsorImage img-fluid img-thumbnail" src="/images/index/sponsors/{{imageName}}" title="{{sponsorName}}" height=300 width=400 alt="">
                <div class="hoverText">
                    <p class="text"><strong>{{sponsorName}}</strong></p>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
        <br>
        {{#if sponsorsGold.length}}
        <p><h2>Gold</h2></p>
        <div class="row text-center text-lg-left">
            {{#each sponsorsGold}}
            <div class="imageContainer col-lg-3 col-md-4 col-6">
                <img class="sponsorImage img-fluid img-thumbnail" src="/images/index/sponsors/{{imageName}}" title="{{sponsorName}}" alt="">
                <div class="hoverText">
                    <p class="text"><strong>{{sponsorName}}</strong></p>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
        <br>
        {{#if sponsorsSilver.length}}
        <p><h2>Silver</h2></p>
        <div class="row text-center text-lg-left">
            {{#each sponsorsSilver}}
            <div class="imageContainer col-lg-3 col-md-4 col-6">
                <img class="sponsorImage img-fluid img-thumbnail" src="/images/index/sponsors/{{imageName}}" title="{{sponsorName}}" alt="">
                <div class="hoverText">
                    <p class="text"><strong>{{sponsorName}}</strong></p>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
        <br>
        {{#if sponsorsBronze.length}}
        <p><h2>Bronze</h2></p>
        <div class="row text-center text-lg-left">
            {{#each sponsorsBronze}}
            <div class="imageContainer col-lg-3 col-md-4 col-6">
                <img class="sponsorImage img-fluid img-thumbnail" src="/images/index/sponsors/{{imageName}}" title="{{sponsorName}}" alt="">
                <div class="hoverText">
                    <p class="text"><strong>{{sponsorName}}</strong></p>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
    </div>
    {{> footer}}
</body>

</html>
